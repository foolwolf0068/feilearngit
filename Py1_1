# Display two messages
print('Welcome to Python!')
print("Python is fun!")
print('Problem Driven!')
print('3.5 x 4 /2 - 2.5 is')
print(3.5 *4 /2 - 2.5)

# 图形用turtle
import turtle
turtle.showturtle()
turtle.write('Welcome to Python!')
turtle.forward(100)
turtle.right(90)
turtle.color('red')
turtle.forward(50)
turtle.right(100)
turtle.color('green')
turtle.forward(100)
turtle.right(45)
turtle.forward(80)
# 将笔移动到任意位置
turtle.goto(0,50)
turtle.penup()
turtle.goto(50,50)
turtle.pendown()
turtle.color('red')
turtle.circle(50)

# 绘制奥林匹克环标志
turtle.color('blue')
turtle.penup()
turtle.goto(-150,-50)
turtle.pendown()
turtle.circle(45)

turtle.color('black')
turtle.penup()
turtle.goto(-40,-50)
turtle.pendown()
turtle.circle(45)

turtle.color('red')
turtle.penup()
turtle.goto(70,-50)
turtle.pendown()
turtle.circle(45)

turtle.color('yellow')
turtle.penup()
turtle.goto(-95,-100)
turtle.pendown()
turtle.circle(45)

turtle.color('green')
turtle.penup()
turtle.goto(15,-100)
turtle.pendown()
turtle.circle(45)

turtle.done()# 画图完毕 等待用户关闭窗口
# 编程题
# 1.1 
a='Welcome to Python!\n'
print(a*5)